<div class="container mt-5">
    <form action="/brand/edit/{{ brand._id }}" method="post" class="col-md-6 mx-auto">
        <h1 class="mb-4">Edit Brand</h1>
        
        <div class="mb-3">
            <label for="name" class="form-label">Brand Name:</label>
            <input type="text" class="form-control" id="name" name="name" value="{{ brand.name }}" required>
        </div>
        
        <div class="mb-3">
            <label for="country" class="form-label">Brand country:</label>
            <input type="text" class="form-control" id="country" name="country" value="{{ brand.country }}" required>
        </div>
         <button type="submit" class="btn btn-primary">Edit</button>


